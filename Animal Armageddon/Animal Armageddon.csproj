    <None Remove="textures\fire.jpg" />
    <None Remove="textures\hippo.png" />
    <None Remove="textures\lava.png" />
    <None Remove="textures\talaj.png" />
    <None Remove="textures\testPlayer.png" />
    <None Remove="textures\testPlayer2.png" />
    <None Remove="textures\textBoxBackground.png" />
